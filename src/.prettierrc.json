{
    "printWidth": 140,
    "tabWidth": 2,
    "endOfLine": "auto",
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "arrowParens": "always",
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "overrides": [
      {
        "files": ["*.md", "*.json", "*.conf.js"],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }